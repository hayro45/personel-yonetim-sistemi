@model List<PersonelMVCUI.Models.EntityFramework.Personel>
@{
    ViewBag.Title = "Personel";
}
<a href="/Personel/Yeni" class="btn btn-success"><i class="glyphicon glyphicon-plus"></i></a>
<h2>Personel Listesi</h2>
<table class="table table-bordered" id="tblPersoneller">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Departman</th>
            <th>Yaş</th>
            <th>Maaş</th>
            <th>Doğum Tarihi</th>
            <th>Cinsiyet</th>
            <th>Evlilik Durumu</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var personel in Model)
        {
            <tr>
                <td>@personel.Ad</td>
                <td>@personel.Soyad</td>
                <td>@personel.Departman.Ad</td>
                <td>@(DateTime.Now.Year - personel.DogumTarihi.Value.Year)</td>
                <td>@personel.Maas</td>
                <td>@personel.DogumTarihi.Value.ToString("dd-MM-yyyy")</td>
                <td>@(personel.Cinsiyet == true ? "Erkek" : "Kadın")</td>
                <td>@(personel.EvliMi == true ? "Evli" : "Bekar")</td>
                <td><a href="/Personel/Guncelle/@personel.Id" class="btn btn-warning"><i class="glyphicon glyphicon-pencil"></i></a></td>
                <td><a class="btn btn-danger btnPersonelSil" data-id="@personel.Id"><i class="glyphicon glyphicon-trash"></i></a></td>
            </tr>
        }
    </tbody>
</table>
